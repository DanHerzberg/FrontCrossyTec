@page
@model FrontCrossyTec.Pages.PaginaTiendaModel
@{
    ViewData["Title"] = "Tienda de Cajas";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/estiloTienda.css" />
</head>
<body>

    <h1 class="text-center">Bienvenidos a Nuestra Tienda de Cajas</h1>

    <div class="container mt-5">
        <div class="row">
            @for (int i = 0; i < Model.Cajas.Count; i++)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Model.Cajas[i].ImagenUrl" class="card-img-top" alt="Imagen de la caja">
                        <div class="card-body">
                            <h5 class="card-title">Caja #@Model.Cajas[i].Id</h5>
                            <p class="card-text">Precio: $@Model.Cajas[i].Precio</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
